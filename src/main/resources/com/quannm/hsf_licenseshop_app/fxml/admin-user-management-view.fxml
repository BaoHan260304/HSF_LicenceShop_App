<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" spacing="10.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.quannm.hsf_licenseshop_app.controller.AdminUserManagementController">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
    <children>
        <Label text="Quản Lý Người Dùng">
            <font>
                <Font name="System Bold" size="24.0" />
            </font>
        </Label>
        <TableView fx:id="userTableView" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="idColumn" prefWidth="50.0" text="ID" />
                <TableColumn fx:id="usernameColumn" prefWidth="120.0" text="Tên đăng nhập" />
                <TableColumn fx:id="fullNameColumn" prefWidth="150.0" text="Họ và Tên" />
                <TableColumn fx:id="emailColumn" prefWidth="180.0" text="Email" />
                <TableColumn fx:id="phoneColumn" prefWidth="100.0" text="Điện thoại" />
                <TableColumn fx:id="roleColumn" prefWidth="80.0" text="Vai trò" />
                <TableColumn fx:id="statusColumn" prefWidth="80.0" text="Trạng thái" />
            </columns>
        </TableView>
        <HBox alignment="CENTER" spacing="10.0">
            <children>
                <Button fx:id="deactivateButton" onAction="#handleDeactivateUser" text="On/Off" disable="true" />
                <Button fx:id="setSellerButton" onAction="#handleSetAsSeller" text="Đặt làm Seller" disable="true" />
                <Button fx:id="viewHistoryButton" onAction="#handleViewHistory" text="Xem Lịch Sử" disable="true" />
                <Button onAction="#handleReload" text="Tải lại" />
                <Button onAction="#handleBackButton" text="Quay về" />
            </children>
        </HBox>
    </children>
</VBox>