<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" spacing="10.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.quannm.hsf_licenseshop_app.controller.AdminUserHistoryController">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
    <children>
        <Label fx:id="titleLabel" text="Lịch sử mua hàng của: User">
            <font>
                <Font name="System Bold" size="24.0" />
            </font>
        </Label>
        <TableView fx:id="orderTableView" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="orderIdColumn" prefWidth="75.0" text="Mã Đơn" />
                <TableColumn fx:id="productNameColumn" prefWidth="250.0" text="Sản phẩm" />
                <TableColumn fx:id="licenseKeyColumn" prefWidth="250.0" text="License Key" />
                <TableColumn fx:id="orderDateColumn" prefWidth="150.0" text="Ngày Mua" />
                <TableColumn fx:id="totalAmountColumn" prefWidth="120.0" text="Tổng Tiền" />
                <TableColumn fx:id="statusColumn" prefWidth="100.0" text="Trạng thái" />
            </columns>
        </TableView>
        <Button onAction="#handleBackButton" text="Quay về" />
    </children>
</VBox>