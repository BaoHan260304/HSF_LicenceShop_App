<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" spacing="10.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.quannm.hsf_licenseshop_app.controller.SellerProductManagementController">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
    <children>
        <Label text="Quản Lý Sản Phẩm">
            <font>
                <Font name="System Bold" size="24.0" />
            </font>
        </Label>
        <TableView fx:id="productTableView" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="idColumn" prefWidth="50.0" text="ID" />
                <TableColumn fx:id="nameColumn" prefWidth="250.0" text="Tên Sản Phẩm" />
                <TableColumn fx:id="typeColumn" prefWidth="150.0" text="Loại" />
                <TableColumn fx:id="priceColumn" prefWidth="120.0" text="Giá" />
                <TableColumn fx:id="statusColumn" prefWidth="120.0" text="Trạng thái" />
            </columns>
        </TableView>
        <HBox alignment="CENTER" spacing="10.0">
            <children>
                <Button onAction="#handleCreateNewProduct" text="Tạo Sản Phẩm Mới" />
                <Button onAction="#handleBackButton" text="Quay về" />
            </children>
        </HBox>
    </children>
</VBox>